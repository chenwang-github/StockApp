{
  "routes": [
    {
      "route": "/i18n/*",
      "headers": {
        "content-type": "text/javascript; charset=utf-8"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/",
      "rewrite": "/viewer.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/viewer.html",
    "exclude": ["/i18n/*", "/api/*", "*.{css,js,json,png,jpg,jpeg,gif,svg,ico,html}"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/viewer.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https:; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".html": "text/html"
  }
}
