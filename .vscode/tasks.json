{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm install (functions)",
			"type": "shell",
			"command": "npm install",
			"options": {
				"cwd": "${workspaceFolder}/backend-js"
			},
			"problemMatcher": []
		},
		{
			"label": "start functions",
			"type": "shell",
			"command": "func start",
			"options": {
				"cwd": "${workspaceFolder}/backend-js"
			},
			"isBackground": true,
			"problemMatcher": "$func-node-watch"
		}
	]
}